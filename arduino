#include <Adafruit_NeoPixel.h>
#include <WiFi.h>
#include <HTTPClient.h>
#include <Arduino_JSON.h>

#define PIN            19
#define NUMPIXELS      12
Adafruit_NeoPixel pixels = Adafruit_NeoPixel(NUMPIXELS, PIN, NEO_GRB + NEO_KHZ800);

const char* ssid = "ssid";
const char* password = "password";
const char* serverName = "http://xxx:3000/lights";
unsigned long lastTime = 0;
unsigned long timerDelay = 5000;

String lightsSettings;

void setup() {
  Serial.begin(115200);
  pixels.begin();
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(timerDelay);
    Serial.println("Connecting to WiFi...");
  }

  Serial.println("Connected to WiFi.");
}

void loop() {
  if ((millis() - lastTime) > timerDelay) {
    if (WiFi.status() == WL_CONNECTED) {
      lightsSettings = httpGETRequest(serverName);
      JSONVar settingsParsed = JSON.parse(lightsSettings);

      if (JSON.typeof(settingsParsed) == "undefined") {
        Serial.println("Parsing input failed!");
        return;
      }

      JSONVar keys = settingsParsed.keys();
      String jsonStringRed = JSON.stringify(settingsParsed["red"]);
      String jsonStringGreen = JSON.stringify(settingsParsed["green"]);
      String jsonStringBlue = JSON.stringify(settingsParsed["blue"]);

      int red = int(settingsParsed["red"]);
      int green = int(settingsParsed["green"]);
      int blue = int(settingsParsed["blue"]);

      Serial.print("R ");
      Serial.println(red);

      Serial.print("G ");
      Serial.println(green);

      Serial.print("B ");
      Serial.println(blue);

      for(int i=0; i<NUMPIXELS; i++) {
        pixels.setPixelColor(i, pixels.Color(red, green, blue));
        pixels.show();
      }

    } else {
      Serial.println("WiFi Disconnected");
    }

    lastTime = millis();
  }
}

String httpGETRequest(const char* serverName) {
  WiFiClient client;
  HTTPClient http;

  http.begin(client, serverName);

  int httpResponseCode = http.GET();

  String payload = "{}";

  if (httpResponseCode > 0) {
    Serial.print("HTTP Response code: ");
    Serial.println(httpResponseCode);
    payload = http.getString();
  }
  else {
    Serial.print("Error code: ");
    Serial.println(httpResponseCode);
  }

  http.end();

  return payload;
}